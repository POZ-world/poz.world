# /opt/mastodon/bin/show-mastodon-branding 
# /opt/mastodon/bin/start-sshd 
# /opt/mastodon/bin/start-nginx 
# /bin/echo "**** Starting Mastodon ****";
/opt/mastodon/bin/bundle exec rails server -p 3000 