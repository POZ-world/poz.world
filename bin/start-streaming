#!/usr/bin/with-contenv bash
# shellcheck shell=bash

export RAILS_ENV=production
export PATH="/opt/mastodon/bin:/usr/bin:/bin:${PATH}"

/usr/bin/cd /opt/mastodon && \
/bin/bash bin/show-branding && \
/bin/bash bin/start-sshd && \
/bin/bash bin/start-nginx && \
/bin/echo "**** Starting streaming ****" && \
node /opt/mastodon/streaming/index.js;