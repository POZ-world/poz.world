#!/usr/bin/with-contenv bash
# shellcheck shell=bash

export RAILS_ENV=production
export PATH="/opt/mastodon/bin:${PATH}"

cd /opt/mastodon && \
bash bin/show-branding && \
bash bin/start-sshd && \
bash bin/start-nginx && \
echo "**** Starting streaming ****" && \
node /opt/mastodon/streaming/index.js;