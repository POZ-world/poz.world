#!/usr/bin/with-contenv bash
# shellcheck shell=bash

export RAILS_ENV=production
export PATH="/opt/mastodon/bin:${PATH}"

PATH="/opt/mastodon/bin:${PATH}"

echo "Moving mastodon.conf to /config/nginx/site-confs...";
cp /opt/nginx/mastodon.conf /config/nginx/site-confs;

bash display-branding;
bash start-sshd;
bash start-nginx; 
echo "**** Starting Mastodon ****";
/opt/mastodon/bin/bundle exec rails server -p 3000;