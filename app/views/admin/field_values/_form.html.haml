= form_with model: [@field_template, @field_value], url: url, method: method, local: true do |f|
  - if @field_value.errors.any?
    #error_explanation
      %h2
        = pluralize(field_value.errors.count, "error")
        prohibited this field_value from being saved:
      %ul
        - @field_value.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :value
    = f.text_field :value, class: 'form-control'

  .form-group
    = f.label :display_value
    = f.text_field :display_value, class: 'form-control'

  .form-group
    = f.label :description
    = f.text_area :description, class: 'form-control'

  .form-group
    = f.label :default
    = f.check_box :default

  .form-group
    = f.label :order
    = f.number_field :order, class: 'form-control'

  .form-group
    = f.submit class: 'btn btn-primary'
    |
    = link_to 'Back', admin_field_template_path(@field_template), method: :get, class: 'btn btn-secondary'