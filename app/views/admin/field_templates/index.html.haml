- content_for :page_title do
  = t('admin.field_templates.title')

%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Description
      %th Type
      %th{ colspan: 3 }

  %tbody
    - @field_templates.each do |field_template|
      %tr
        %td= field_template.name || 'N/A'
        %td= field_template.description || 'N/A'
        %td= field_template.field_type || 'N/A'
        %td= link_to 'Show', admin_field_template_path(field_template), class: 'btn btn-primary btn-sm'
        %td= link_to 'Edit', edit_admin_field_template_path(field_template), class: 'btn btn-warning btn-sm'
        %td= link_to 'Destroy', admin_field_template_path(field_template), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm'

= link_to 'New Field Template', new_admin_field_template_path, class: 'btn btn-success'
